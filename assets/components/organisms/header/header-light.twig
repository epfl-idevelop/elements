      </li>
      <li id="menu-item-666">
        <a class="nav-item" href="/ducation-2/">Éducation</a>
      </li>
      <li id="menu-item-777">
        <a class="nav-item nav-search" href="/ducation-2/">
          {% include "@atoms/icon/icon.twig" with { icon: 'icon-search' } %}
        </a>
      </li>
    </ul>
    {% include '@molecules/search/search.twig' %}
    {% include '@atoms/nav-lang/nav-lang.twig' %}
    {% include '@atoms/nav-toggle-mobile/nav-toggle-mobile.twig' %}
  </div>
